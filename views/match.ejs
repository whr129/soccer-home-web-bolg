<%- include ("header.ejs") %>

<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold text-body-emphasis">Matches</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">Important Matches and you can add yours.</p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <button onclick="jumpToSection('matches')" class="btn btn-primary btn-lg px-4 gap-3">Matches</button>
      </div>
    </div>
  </div>

<div id="matches">
    <% for (let i =0; i < match.length; i++) { %>
        <div class="container h-100 d-flex justify-content-center align-items-center">
            <div class="row">
                <div class="col-md-12"> <!-- Adjusted column size for wider card -->
                    <div class="card text-center">
                        <div class="card-header"><%= match[i].league %></div>
                        <div class="card-body">
                            <h5 class="card-title"><%= match[i].teamA %> <span class="badge bg-success"><%= match[i].score %></span> <%= match[i].teamB %></h5>
                            <p class="card-text"><small class="text-muted">Date: <%= match[i].date %></small></p>
                            
                            <!-- Buttons -->
                            <div class="btn-group">
                                <form action=<%= "/deleteMatch/" + i %> method="get">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Delete</button>
                                </form>
                                <form action= <%= "/uploadMatch/" + i %>  method="get">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">upload</button>
                                </form>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    <br>
    <% } %>
    <div class="container h-100 d-flex justify-content-center align-items-center">
        <div class="row">
            <div class="col-md-12"> <!-- Adjusted column size for wider card -->
                <div class="card text-center">
                    <div class="card-header">Add new match</div>
                    <div class="card-body">
                        <h5 class="card-title">TeamA <span class="badge bg-success">score</span> TeamB</h5>
                        <p class="card-text"><small class="text-muted">Date: to be set</small></p>
                            <form action="/addMatch" method="get">
                                <button type="submit" class="btn btn-sm btn-outline-secondary">Add</button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

  <script>
    function jumpToSection(sectionId) {
        var element = document.getElementById(sectionId);
        element.scrollIntoView({behavior: 'smooth', block: 'start'});
    }
    </script>

<%- include ("footer.ejs") %>